// 将键绑定放在此文件中以覆盖默认值
[
  {
    "key": "shift+alt+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    // 负号表示使用禁用这个快捷键，就是用上面的快捷键覆盖了vscode自带的快捷键 
    "key": "ctrl+shift+alt+up",
    "command": "-editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+down",
    "command": "-editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+alt+-",
    "command": "-workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+k ctrl+p",
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+up",
    "command": "-editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k ctrl+n",
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+down",
    "command": "-editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  // 增加Alt + j 为向下，而不是取代原来的向下的方向键
  {
    "key": "alt+j",
    "command": "cursorDown",
    "when": "editorTextFocus"
  },
  // 增加Alt + j 为向上，而不是取代原来的向上的方向键
  {
    "key": "alt+k",
    "command": "cursorUp",
    "when": "editorTextFocus"
  },
  // 增加Alt + h 为向左，而不是取代原来的向左的方向键
  {
    "key": "alt+h",
    "command": "cursorLeft",
    "when": "editorTextFocus"
  },
  // 增加Alt + l 为向右，而不是取代原来的向右的方向键
  {
    "key": "alt+l",
    "command": "cursorRight",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  {
    "key": "alt+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  // 模拟vim的 gg 跳转到文档开头
  {
    "key": "ctrl+k g g",
    "command": "cursorTop",
    "when": "textInputFocus"
  },
  // 模拟vim的 G 跳转到文档的结尾
  {
    "key": "ctrl+k shift+g",
    "command": "cursorBottom",
    "when": "textInputFocus"
  },
  // 模拟vim的 0 光标跳转到一行的开头
  {
    "key": "ctrl+k 0",
    "command": "cursorHome",
    "when": "textInputFocus"
  },
  // 模拟vim的 $ 光标跳转到一行的结尾
  {
    "key": "ctrl+k shift+4",
    "command": "cursorEnd",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+f5",
    "command": "-cmake.debugTarget",
    "when": "cmake:enableFullFeatureSet && inCMakeProject && !cmake:hideDebugCommand && !inDebugMode"
  }
]